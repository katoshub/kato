-- GUI SIN KEY SYSTEM: Solo 2 botones (Video + Discord)

local Players = game:GetService("Players")
local Lighting = game:GetService("Lighting")
local TweenService = game:GetService("TweenService")
local LocalPlayer = Players.LocalPlayer

-- LINKS
local videoURL = "https://youtu.be/YX_J8RkN7fQ?si=ZHdKnbq8CiUK4Sdh"
local discordURL = "https://discord.gg/katoscript"

-- GUI principal
local gui = Instance.new("ScreenGui")
gui.Name = "SimpleGUI"
gui.ResetOnSpawn = false
gui.Parent = LocalPlayer:WaitForChild("PlayerGui")

-- Efecto blur
local blur = Instance.new("BlurEffect")
blur.Size = 0
blur.Parent = Lighting
TweenService:Create(blur, TweenInfo.new(0.5), { Size = 10 }):Play()

-- Frame principal
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 350, 0, 200)
frame.Position = UDim2.new(0.5, -175, 0.5, -100)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
frame.BackgroundTransparency = 0.1
frame.Parent = gui
frame.Active = true
frame.Draggable = true

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = frame

local stroke = Instance.new("UIStroke")
stroke.Color = Color3.fromRGB(140, 0, 255)
stroke.Thickness = 2
stroke.Parent = frame

-- TÃ­tulo
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -20, 0, 40)
title.Position = UDim2.new(0, 10, 0, 10)
title.BackgroundTransparency = 1
title.Text = "ðŸŽ¬ CONSIGUE EN MI VIDEO"
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Parent = frame

-- BotÃ³n Video
local videoBtn = Instance.new("TextButton")
videoBtn.Size = UDim2.new(0.8, 0, 0, 40)
videoBtn.Position = UDim2.new(0.1, 0, 0, 70)
videoBtn.BackgroundColor3 = Color3.fromRGB(80, 30, 180)
videoBtn.Text = "ðŸ“º Ver el Video"
videoBtn.Font = Enum.Font.GothamBold
videoBtn.TextColor3 = Color3.new(1, 1, 1)
videoBtn.TextSize = 16
videoBtn.Parent = frame
Instance.new("UICorner", videoBtn).CornerRadius = UDim.new(0, 8)

-- BotÃ³n Discord
local discordBtn = Instance.new("TextButton")
discordBtn.Size = UDim2.new(0.8, 0, 0, 40)
discordBtn.Position = UDim2.new(0.1, 0, 0, 120)
discordBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 60)
discordBtn.Text = "ðŸ’¬ Unirse al Discord"
discordBtn.Font = Enum.Font.GothamBold
discordBtn.TextColor3 = Color3.new(1, 1, 1)
discordBtn.TextSize = 16
discordBtn.Parent = frame
Instance.new("UICorner", discordBtn).CornerRadius = UDim.new(0, 8)

-- Cierre con blur
local closeBtn = Instance.new("TextButton")
closeBtn.Text = "âœ–"
closeBtn.Size = UDim2.new(0, 30, 0, 30)
closeBtn.Position = UDim2.new(1, -40, 0, 10)
closeBtn.BackgroundColor3 = Color3.fromRGB(60, 20, 20)
closeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 14
closeBtn.Parent = frame
Instance.new("UICorner", closeBtn).CornerRadius = UDim.new(1, 0)

-- Funciones de los botones
videoBtn.MouseButton1Click:Connect(function()
    setclipboard(videoURL)
    videoBtn.Text = "ðŸ“‹ Link copiado"
    task.wait(1.5)
    videoBtn.Text = "ðŸ“º Ver el Video"
end)

discordBtn.MouseButton1Click:Connect(function()
    setclipboard(discordURL)
    discordBtn.Text = "ðŸ“‹ Discord copiado"
    task.wait(1.5)
    discordBtn.Text = "ðŸ’¬ Unirse al Discord"
end)

closeBtn.MouseButton1Click:Connect(function()
    TweenService:Create(blur, TweenInfo.new(0.5), { Size = 0 }):Play()
    task.wait(0.5)
    blur:Destroy()
    gui:Destroy()
end)
